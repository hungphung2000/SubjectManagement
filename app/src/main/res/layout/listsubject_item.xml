<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="#A3894A"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/txtSubjectTitle"
            android:text="Môn học"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Số tín chỉ: "
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtSubjectCredit"
                android:text="3"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>

        <ImageButton
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
        android:id="@+id/ibtnSubjectInfor"
        android:layout_width="50dp"
        android:src="@drawable/ic_baseline_view_headline_24"
        android:layout_height="50dp"></ImageButton>

    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/ibtnSubjectUpdate"
        android:layout_width="50dp"
        android:src="@drawable/ic_baseline_update_24"
        android:layout_height="50dp"></ImageButton>

    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/ibtnSubjectDelete"
        android:layout_width="50dp"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_height="50dp"></ImageButton>

</LinearLayout>